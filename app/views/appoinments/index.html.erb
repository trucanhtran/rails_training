<p id="notice"><%= notice %></p>

<h1>Appoinments</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Room</th>
      <th>Physican</th>
      <th></th>
      <th>Patient</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appoinments.each do |appoinment| %>
      <tr>
        <td><%= appoinment.date %></td>
        <td><%= appoinment.room %></td>
        <td><%= appoinment.physican&.name %></td>
        <td><%= link_to 'See Physican', physican_path(appoinment.physican) %></td>
        <td><%= appoinment.patient&.name %></td>
        <td><%= link_to 'See Patient', patient_path(appoinment.patient) %></td>
        <td><%= link_to 'Show', appoinment %></td>
        <td><%= link_to 'Edit', edit_appoinment_path(appoinment) %></td>
        <td><%= link_to 'Destroy', appoinment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Appoinment', new_appoinment_path %>
