<div class= "container form">

  <%= form_with(model: @user) do |form| %>

    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
          <% @user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

      <div class="field mb-3">
          <%= form.label :avatar, "Change Avatar", class: "form-label"  %>
          <%= form.file_field :avatar, class: "form-control" %>
      </div>

      <div class="field mb-3">
          <%= form.label :name, class: "form-label"  %>
          <%= form.text_field :name, class: "form-control" %>
        </div>

      <div class="field mb-3">
        <%= form.label :email, class: "form-label"  %>
        <%= form.text_field :email, class: "form-control" %>
      </div>

      <div class="field mb-3">
        <%= form.label :phone, class: "form-label"  %>
        <%= form.number_field :phone, class: "form-control" %>
      </div>


      <div class="actions">
        <%= link_to 'Change Password?', change_password_path %>
      </div>

      <div class="actions btn-seperate">
        <%= form.submit 'Save Change', class: "btn btn-primary" %>
      </div>

  <% end %>
</div>
