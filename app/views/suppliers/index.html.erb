<p id="notice"><%= notice %></p>

<h1>Suppliers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Account Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= supplier.name %></td>
        <td>
          <% if supplier.account.present? %>
            <%= link_to supplier.account&.account_number, supplier_account_path(supplier, supplier.account) %>
          <% end %>
        </td>
        <td><%= link_to 'Show', supplier %></td>
        <td><%= link_to 'Edit', edit_supplier_path(supplier) %></td>
        <td><%= link_to 'Destroy', supplier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
         <td>
          <% if supplier.account.present? %>
            <%= link_to 'Destroy Account', supplier_account_path(supplier, supplier.account),
            method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
         </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Supplier', new_supplier_path %>
