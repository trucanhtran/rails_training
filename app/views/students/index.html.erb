<p id="notice"><%= notice %></p>

<h1>Students</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Bio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.age %></td>
        <td><%= student.phone %></td>
        <td><%= student.address %></td>
        <td><%= student.bio %></td>
        <td><%= link_to 'Show', subject_student_path(@subject, student.id) %></td>
        <td><%= link_to 'Edit', edit_subject_student_path(@subject,student) %></td>
        <td><%= link_to 'Destroy', subject_student_path(@subject, student.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student',   new_subject_student_path(@subject) %>
