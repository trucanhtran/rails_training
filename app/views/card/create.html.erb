<div>
  <%= form_with url: card_create_path, method: :get do |f| %>
    <div>
      <%= f.label :first_name, "First name" %>
      <%= f.text_field :first_name, id: "id_first_name", class: "first-name", placeholder: "Please input your first name" %>
    </div>
    <div>
      <%= f.label :last_name, "Last name" %>
      <%= f.text_field :last_name, id: "id_last_name", class: "last-name", placeholder: "Please input your last name" %>
    </div>
    <div>
      <%= f.label :age, "Age" %>
      <%= f.number_field :age, id: "id_age", class: "age", placeholder: "Enter your age", in: 0..100, step: 1 %>
    </div>
    <div>
      <%= f.label :email, "Email" %>
      <%= f.email_field :email, id: "id_email", class: "email", placeholder: "Enter your email" %>
    </div>
    <div>
      <%= f.label :desc, "Description" %>
      <%= f.text_area :desc, size: "70x5", id: "id-desc", class:"desc", placeholder: "Text here" %>
    </div>
    <div>
      <%= f.label :phone, "Phone Number" %>
      <%= f.number_field :phone, id: "id_phone", class: "phone", placeholder: "Enter your phone number" %>
    </div>
    <div>
      <%= f.label :sex, "Sex" %>
      <%= f.select :sex, ["Male","Female"], id: "id_sex", class: "sex" %>
    </div>
    <div>
      <%= f.check_box :agree, id: "id_agree", class: "agree" %>
      <%= f.label :agree, "I agree" %>
    </div>
    <div>
      <%= f.submit "Submit" %>

    </div>
    <div>

    </div>

  <% end %>
</div>
