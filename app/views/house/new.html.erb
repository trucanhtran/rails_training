<div>
  <%= form_with model: @house, url: house_create_path do |f| %>
    <div class="mb-3">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control", placeholder: "Enter name" %>
    </div>
     <div class="mb-3">
      <%= f.label :address, class: "form-label" %>
      <%= f.text_field :address, class: "form-control", placeholder: "Enter name" %>
    </div>
     <div class="form-check">

      <%= f.check_box :in_use, class: "form-check-input" %>
      <%= f.label :in_use, class: "form-check-label" %>
    </div>
    <div>
      <%= f.submit :submit, class: "btn btn-dark" %>
    </div>
  <% end %>
</div>
